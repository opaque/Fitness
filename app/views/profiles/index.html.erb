<h1>Listing profiles</h1>

<table>
  <tr>
    <th>Height</th>
    <th>Weight</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Gender</th>
	<th>user</th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%=h profile.height %></td>
    <td><%=h profile.weight %></td>
    <td><%=h profile.first_name %></td>
    <td><%=h profile.last_name %></td>
    <td><%=h profile.gender %></td>
	<td><%=h profile.user_id %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

