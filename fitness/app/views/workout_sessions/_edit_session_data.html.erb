<% remote_form_for([@event, @workout_session], :url => {:controller => "workout_sessions", :action => :update, :event_id => @event.id, :id => @workout_session.id}, :complete => "addSession('#{@event.id}')") do |f| %>
  <%= f.error_messages %>

	<% if Exercise.find(@workout_session.exercise_id).exercise_type == 'cardio' %>  
 
		<%= f.label 'Planned Exercise Time' %>
		<%= f.text_field :estimated_mins, :size => 10 %>
	
	<% else %>
	
		<%= f.label  'Planned Reps Per Set'%>
		<%= f.text_field :estimated_reps, :size => 10 %>
	 
		<%= f.label 'Planned Sets' %>
		<%= f.text_field :estimated_sets, :size => 10 %>
	 
	<% end %>
  
  
    <%= f.submit 'Update' %>
 
<% end %>