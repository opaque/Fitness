<% if !current_user %>
  <%= link_to "Register", new_user_path %> |
  <%= link_to "Log In", login_path %> 
<% else %>
<%= render "layouts/base" %>
<br />
<%= link_to "existing profiles", profiles_path %><br />
<%= link_to "Logout", logout_path, :confirm => "Are you sure you want to logout?" %>
<% end %>

<p style="color: green"><%= flash[:notice] %></p>

<%= yield %>

