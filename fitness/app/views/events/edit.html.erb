<h1>Editing event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :start_at %><br />
    <%= f.datetime_select :start_at, :twelve_hour => true %>
  </p>
  <p>
    <%= f.label :end_at %><br />
    <%= f.datetime_select :end_at, :twelve_hour => true %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @event %> |
<%= link_to 'Remove', @event, :confirm => 'Are you sure?', :method => :delete %> | 
<%= link_to 'Back', events_path %>